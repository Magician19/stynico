<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    android:id="@+id/lxwitemhelpsCardView1">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:background="#323232"
		android:id="@+id/lxwitemhelpsLinearLayout1">

		<TextView
			android:id="@+id/lxw_id_item_helps_user_personality"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:text="这人好懒-什么都没写"
			android:textColor="#565656"
			android:textSize="12sp"
			android:layout_marginTop="4dp"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/lxw_id_item_helps_create_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="你好"
			android:textColor="#565656"
			android:textSize="12sp"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/lxw_id_item_helps_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="内容"
			android:textColor="#FFFFFF"
			android:textSize="14sp"
			android:padding="48dp"
			android:gravity="center"/>

		<RelativeLayout
			android:layout_height="48dp"
			android:layout_width="match_parent"
			android:background="#FFFFFF">

			<nico.styTool.CircleImageView
				android:id="@+id/lxw_id_item_helps_userimg"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginLeft="4dp"
				android:scaleType="centerCrop"
				android:src="@mipmap/ic_launcher"
				android:layout_marginRight="4dp"
				android:layout_alignParentLeft="true"
				android:layout_centerInParent="true"/>
<TextView
				android:layout_toRightOf="@id/lxw_id_item_helps_userimg"
				android:id="@+id/lxw_id_item_helps_username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="l"
				android:textColor="#FF323232"
				android:textSize="16sp"
				android:layout_centerInParent="true"/>

		</RelativeLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

