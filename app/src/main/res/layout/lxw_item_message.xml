<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:emojicon="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<nico.styTool.CircleImageView
			android:id="@+id/lxw_id_item_message_comment_userimg"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:src="@mipmap/ic_launcher"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="16dp"
			android:layout_toRightOf="@+id/lxw_id_item_message_comment_userimg"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<nico.styTool.EmojiconTextView
					android:id="@+id/lxw_id_item_message_username"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				    android:text="妮媌"
					emojicon:emojiconAlignment="baseline"
					android:textColor="#232323"
					android:textSize="16sp"/>

				<TextView
					android:id="@+id/lxw_id_item_message_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:text="未读"
					android:textColor="#222555"
					android:layout_alignParentRight="true"
					android:textSize="12sp"/>

			</RelativeLayout>

			<nico.styTool.EmojiconTextView
				android:id="@+id/lxw_id_item_message_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
			    android:text="我是妮媌"
				emojicon:emojiconAlignment="baseline"
				android:textColor="#565656"/>

			<TextView
				android:id="@+id/lxw_id_item_message_createtime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text="3"
				android:textColor="#565656"
				android:textSize="12sp"/>

		</LinearLayout>

	</RelativeLayout>

</android.support.v7.widget.CardView>

